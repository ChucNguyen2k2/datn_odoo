<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Định nghĩa asset bundle mới cho module -->
        <record id="assets_backend" model="ir.asset">
            <field name="name">school_attendance_log.assets_backend</field>
            <field name="bundle">web.assets_backend</field> <!-- Thêm trường bundle -->
            <field name="path">/school_attendance_log/static/css/custom_style.css</field>
            <field name="directive">append</field> <!-- append để thêm vào bundle -->
        </record>

        <record id="assets_backend_js" model="ir.asset">
            <field name="name">school_attendance_log.assets_backend_js</field>
            <field name="bundle">web.assets_backend</field> <!-- Thêm trường bundle -->
            <field name="path">/school_attendance_log/static/js/attendance.js</field>
            <field name="directive">append</field> <!-- append để thêm vào bundle -->
        </record>
    </data>
</odoo>